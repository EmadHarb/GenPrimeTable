@{
    ViewData["Title"] = "Home Page";
}

@model PrimeTable.Frontend.Models.MultiplicationTableViewModel

<h2>Prime Number Multiplication Table</h2>

<form method="get" asp-action="Index">
    <label for="size">Enter Size:</label>
    <input type="number" id="size" name="size" value="@Model.Size" min="1" />
    <input type="submit" value="Generate Table" />
</form>

<table>
    <thead>
        <tr>
            <th></th>
            @foreach (var prime in Model.PrimeNumbers)
            {
                <th>@prime.Value</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Size; i++)
        {
            <tr>
                <td style="font-weight: bold;">@Model.PrimeNumbers[i].Value </td>
                @for (int j = 0; j < Model.Size; j++)
                {
                    <td>@Model.TableGrid[i, j].Product</td>
                }
            </tr>
        }
    </tbody>
</table>